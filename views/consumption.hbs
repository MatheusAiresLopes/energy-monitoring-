<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <title>Consumo de Energia</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        margin: 20px;
      }

      .user {
        border: 1px solid #ccc;
        border-radius: 8px;
        padding: 15px;
        margin-bottom: 20px;
      }

      .user h2 {
        margin-top: 0;
      }

      table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 10px;
      }

      table, th, td {
        border: 1px solid #aaa;
      }

      th, td {
        padding: 8px;
        text-align: left;
      }

      th {
        background-color: #f5f5f5;
      }
    </style>
  </head>
  <body>
    <h1>Relat√≥rio de Consumo de Energia</h1>

    {{#each users}}
      <div class="user">
        <h2>{{name}} (ID: {{userId}})</h2>
        <p><strong>Total de Consumo:</strong> {{totalKwh}} kWh</p>

        <table>
          <thead>
            <tr>
              <th>Data</th>
              <th>Consumo (kWh)</th>
            </tr>
          </thead>
          <tbody>
            {{#each records}}
              <tr>
                <td>{{date}}</td>
                <td>{{kwh}}</td>
              </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    {{/each}}
  </body>
</html>
